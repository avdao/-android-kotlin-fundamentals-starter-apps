<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:clickable="true"
    android:focusable="true"

    tools:context=".Pitanje4Fragment">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <ImageView
            android:layout_width="287dp"
            android:layout_height="235dp"
            android:contentDescription="@string/todo"
            android:padding="19dp"

            android:src="@drawable/prr" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="2dp"


            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:text="@string/prioritet"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioMedical"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="274dp"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginRight="-124dp"
            android:layout_marginBottom="206dp"
            android:text="Medicinski radnik"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioKardio"
            android:layout_width="709dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="272dp"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="376dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="147dp"
            android:text="Bolesnik sa oboljenjima kardiovaskularnog sistema "
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonVojno"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="266dp"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="-132dp"
            android:layout_marginRight="-132dp"
            android:layout_marginBottom="91dp"
            android:text="Vojno lice"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/nista"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="269dp"
            android:layout_marginLeft="269dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="-135dp"
            android:layout_marginRight="-135dp"
            android:layout_marginBottom="26dp"
            android:text="Nista od navedenog"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>
