<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:clickable="true"
    android:focusable="true"

    tools:context=".Pitanje3Fragment">

    <RelativeLayout
        android:layout_width="723dp"
        android:layout_height="283dp"

        android:layout_centerInParent="true"
        android:background="@color/white">


        <ImageView
            android:layout_width="243dp"
            android:layout_height="252dp"
            android:contentDescription="@string/todo"

            android:padding="19dp"
            android:src="@drawable/slikazapitanja" />

        <TextView
            android:layout_width="166dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"


            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="108dp"
            android:text="Da li ste"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="413dp"
            android:layout_marginLeft="413dp"
            android:layout_marginTop="40dp"

            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="151dp"
            android:text="Muško"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="415dp"
            android:layout_marginLeft="415dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="123dp"
            android:layout_marginRight="123dp"
            android:layout_marginBottom="89dp"
            android:text="Žensko"
            android:textSize="30sp" />


    </RelativeLayout>
</RelativeLayout>
